#! /usr/bin/env python3

import re

# Example 1

string = "The night was cold and dark"

print("Example1: search in {}".format(string))

re.search("night", string)

m = re.search("night", string) # search the "night" in the string
start = m.start()
end = m.end()

print(string[start:end])


# Example 2
string2 = "afsdadfadsfadsfadfadlfkf Cheese caskdjak Cake dfadfadfa fPizza"
print("Example2: search in {}".format(string2))

re.search("Cheese", string2)
position = re.search("Cheese", string2)

start = position.start()
end = position.end()

print(string2[start:end])
